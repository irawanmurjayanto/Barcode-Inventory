<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context="com.example.barcodegcnew.Emp_RegAssSaw">


    <android.support.v7.widget.Toolbar
        android:theme="@style/MyTheme"
        app:popupTheme="@style/MyTheme"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:background="@color/colorGreytua"
        app:titleTextAppearance="@style/Toolbar.TitleText"
        />

<LinearLayout
    android:gravity="center_horizontal"

    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <!--import-->
    <LinearLayout
android:id="@+id/menu1"

        android:layout_margin="5dp"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageButton
            android:layout_gravity="center"
            android:id="@+id/stockimport"
            android:background="@drawable/mimport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textStyle="bold"
            android:textSize="10dp"
            android:padding="3dp"
            android:layout_gravity="center"
            android:text="Import"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <!--putra-->
    <LinearLayout
        android:id="@+id/menu2"
        android:layout_margin="5dp"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageButton
            android:layout_gravity="center"
            android:id="@+id/stockputra"
            android:background="@drawable/mimport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textStyle="bold"
            android:textSize="10dp"
            android:padding="3dp"
            android:layout_gravity="center"
            android:text="Putra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <!--import-->
    <LinearLayout

        android:id="@+id/menu3"
        android:layout_margin="5dp"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageButton
            android:layout_gravity="center"
            android:id="@+id/stockbad"
            android:background="@drawable/mimport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textStyle="bold"
            android:textSize="10dp"
            android:padding="3dp"
            android:layout_gravity="center"
            android:text="Bad Stock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>

    <LinearLayout
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/addround"
        android:orientation="horizontal"
        android:layout_width="250dp"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/colorWhite"
           android:textStyle="bold"
            android:textSize="11dp"
            android:paddingLeft="5dp"
            android:layout_marginLeft="10dp"
            android:text="Tgl. Stock : "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
android:layout_marginLeft="5dp"
            android:id="@+id/tglupdate"
            android:layout_width="100dp"
            android:layout_height="wrap_content"/>
        <ImageButton
            android:id="@+id/tglakses"
            android:layout_marginLeft="5dp"
            android:background="@drawable/calender"
            android:layout_width="25dp"
            android:layout_height="20dp"/>
    </LinearLayout>


    <TextView
 android:layout_marginTop="5dp"
        android:background="@color/colorAccent"
        android:textColor="@color/colorWhite"
        android:id="@+id/textNotrans"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp" />




    <EditText
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
android:textSize="10dp"
        android:padding="10dp"
        android:id="@+id/textcariitem"
        android:background="@color/colorGreymuda"
        android:hint="Ketik Nama Item"
        android:layout_below="@+id/textNotrans"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


<LinearLayout
    android:layout_marginTop="5dp"
    android:layout_marginLeft="5dp"
    android:orientation="horizontal"
    android:padding="5dp"
    android:background="@color/colorPOSBiru"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:gravity="center_horizontal"
        android:layout_gravity="center"
        android:padding="5dp"
        android:textSize="8dp"
        android:textColor="@color/colorWhite"
        android:background="@color/colorBlack"
        android:text="Item Desc."
        android:layout_width="150dp"
        android:layout_height="wrap_content" />

    <TextView

        android:layout_marginLeft="5dp"
        android:gravity="center"
        android:layout_gravity="center_vertical"
        android:padding="5dp"
        android:textSize="8dp"
        android:textColor="@color/colorWhite"
        android:background="@color/colorBlack"
        android:text="Normal"
        android:layout_width="50dp"
        android:layout_height="wrap_content" />

    <TextView
        android:gravity="center"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="5dp"

        android:padding="5dp"
        android:textSize="8dp"
        android:textColor="@color/colorWhite"
        android:background="@color/colorBlack"
        android:text="Damage"
        android:layout_width="50dp"
        android:layout_height="wrap_content" />

    <TextView
        android:textSize="8dp"
        android:gravity="center"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="5dp"

        android:padding="5dp"
        android:textColor="@color/colorWhite"
        android:background="@color/colorBlack"
        android:text="Total"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>



    <android.support.v7.widget.RecyclerView
        android:background="@color/colorGreymuda_2"
        android:id="@+id/my_recycler_view_dialog"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textcariitem"
        android:layout_marginTop="2dp"
        android:padding="5dp"
        android:layout_marginBottom="10dp"
        android:scrollbars="vertical" />

    <TextView
        android:id="@+id/texthasil1"
        android:visibility="invisible"
        android:layout_width="1dp"
        android:layout_height="1dp"/>


</LinearLayout>

