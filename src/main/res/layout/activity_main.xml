<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back1"
    android:orientation="vertical"
    tools:context=".MainActivity">





    <RelativeLayout
      android:layout_marginTop="-8dp"
        android:layout_alignParentTop="true"
        android:id="@+id/rel1"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_alignParentTop="true"
            android:id="@+id/h1"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:src="@drawable/hatas" />
        <TextView
            android:layout_marginBottom="40dp"
            android:layout_below="@+id/h1"
            android:gravity="center"
            android:textSize="14dp"
            android:textStyle="bold"
            android:text="Aplikasi Stock"
            android:layout_width="match_parent"
            android:layout_height="20dp"/>
    </RelativeLayout>

    <!--menu1-->
    <LinearLayout


        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--import-->
        <LinearLayout
            android:padding="4dp"
android:background="@drawable/addroundmenu"
            android:layout_margin="5dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageButton
                android:layout_gravity="center"
                android:id="@+id/m1"
                android:background="@drawable/mimport"
                android:layout_width="60dp"
                android:layout_height="50dp"/>
            <TextView
                android:textStyle="bold"
                android:textSize="10dp"
                android:padding="3dp"
                android:layout_gravity="center"
                android:text="Import"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>



        <!--OUT-->
        <LinearLayout
            android:padding="4dp"
            android:background="@drawable/addroundmenu"

            android:layout_margin="5dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageButton
                android:layout_gravity="center"
                android:id="@+id/m3"
                android:background="@drawable/tout"
                android:layout_width="60dp"
                android:layout_height="50dp"/>
            <TextView
                android:textStyle="bold"
                android:textSize="10dp"
                android:padding="3dp"
                android:layout_gravity="center"
                android:text="OUT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>




        <!--import-->
        <LinearLayout
            android:padding="4dp"
            android:background="@drawable/addroundmenu"

            android:layout_margin="5dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageButton
                android:layout_gravity="center"
                android:id="@+id/m11"
                android:background="@drawable/stockactive"
                android:layout_width="60dp"
                android:layout_height="50dp"/>
            <TextView
                android:textStyle="bold"
                android:textSize="10dp"
                android:padding="3dp"
                android:layout_gravity="center"
                android:text="Inventory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>



        <!--OUT-->
        <LinearLayout
            android:padding="4dp"
            android:background="@drawable/addroundmenu"

            android:layout_margin="5dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageButton
                android:layout_gravity="center"
                android:id="@+id/outlokal"
                android:background="@drawable/outlokal"
                android:layout_width="60dp"
                android:layout_height="50dp"/>
            <TextView
                android:textStyle="bold"
                android:textSize="10dp"
                android:padding="3dp"
                android:layout_gravity="center"
                android:text="OUT LOKAL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>


    </LinearLayout>


    <!--menu2-->
    <LinearLayout


        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <!--Report-->
        <LinearLayout
            android:padding="4dp"
            android:background="@drawable/addroundmenu"

            android:layout_margin="5dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageButton
                android:layout_gravity="center"
                android:id="@+id/report"
                android:background="@drawable/report"
                android:layout_width="60dp"
                android:layout_height="50dp"/>
            <TextView
                android:textStyle="bold"
                android:textSize="10dp"
                android:padding="3dp"
                android:layout_gravity="center"
                android:text="Report"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>


    </LinearLayout>





    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">




            <TextView
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center_vertical"
                android:textStyle="italic"
                android:textSize="12dp"
                android:text="User Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/user_id"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center_vertical"
                android:textStyle="bold"
                android:textSize="12dp"
                android:text="User Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <Button

                android:textStyle="bold"
                android:textColor="@color/colorWhite"
                android:layout_marginTop="5dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:id="@+id/butlogout"
                android:textSize="10dp"
                android:background="@drawable/addroundbut"
                android:text="Log OUT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        <TextView
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical"
            android:textStyle="bold"
            android:textSize="12dp"
            android:text="@string/versi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>




    <RelativeLayout

        android:layout_alignParentBottom="true"


        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginBottom="15dp"
            android:layout_above="@+id/b2"
            android:gravity="center"
            android:textSize="16dp"
            android:textStyle="bold"
            android:text="Choosen By Outdoor Furniture Leaders"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_alignParentBottom="true"
            android:id="@+id/b2"
            android:background="@drawable/hbawah"
            android:layout_width="match_parent"
            android:layout_height="100dp"/>
    </RelativeLayout>
</LinearLayout>